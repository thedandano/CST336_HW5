<!-- Modal -->
<div
  class="modal fade"
  id="myModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalCenterTitle"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">
          <%= gameDetails.name %>
        </h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
          <div class="row flex-row flex-nowrap overflow-auto">
            <% gameScreenshots.results.forEach(function (screenshot) { %>
              <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card card-block">
                  <img id="screenshots" src="<%= screenshot.image %>"></img>
                </div>
              </div>
            <% }); %>
          </div>
        </div>
        <br>
        <!--Bullet points-->
        <ul>
          <li>Rating: <%= gameDetails.rating %></li>
          <li>Genres: <ul><% gameDetails.genres.forEach(function(genre){ %>
            <li><%= genre.name %></li>
          <% }); %></ul></li>
        </ul>
        <!--Description-->
        <h6>Description:</h6> <%# gameDetails.description %> 
        <div class="modal-footer">
   
          <i id="thumbs-up" class="fas fa-thumbs-up thumb"></i>
     
          
          <i id="thumbs-down" class="fas fa-thumbs-down thumb"></i>
         
        </div>
      </div>
    </div>
  </div>
</div>
