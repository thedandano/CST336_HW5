<div class="container-fluid card-columns text-center">
    <% gameDetails.forEach((game) =>{ %>
    <div id="<%= game.gameID %>" class="card ratings" style="width: 18rem;">
      <img
        class="card-img-top"
        src="<%= game.imageUrl %>"
        alt="Card image cap"
      />
      <div class="card-body">
        <h5 class="card-title"><%= game.title %></h5>
        <br />
        <div class="text-center">
          <i id="thumbs-up" class="fas fa-thumbs-up thumb <%- game.rating == "thumbs-up" ? "green" : "" %>"></i>
          <i id="thumbs-down" class="fas fa-thumbs-down thumb <%- game.rating == "thumbs-down" ? "red" : "" %>"></i>
          <div id="<%= game.gameID %>" class="<%= game.title %>" src="<%= game.imageUrl %>"  ></div>
        </div>
      </div>
    </div>
    <% }) %>
  </div>